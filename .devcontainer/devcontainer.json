{
	"name": "Go",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "Dockerfile"
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"moby": false, // trixie doesn't support moby
			"version": "28" // ran into issues with docker 29 and kind
		},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
		"ghcr.io/devcontainers-extra/features/kind:1": {},
		"ghcr.io/guiyomh/features/mage:0": {},
		"ghcr.io/devcontainers/features/node:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot-chat",
				"GitHub.copilot",
				"esbenp.prettier-vscode"
			]
		}
	},
	"mounts": [
		"source=armada-lookoutui-node_modules,target=${containerWorkspaceFolder}/internal/lookoutui/node_modules,type=volume",
		"source=armada-website-node_modules,target=${containerWorkspaceFolder}/website/node_modules,type=volume",
		"source=armada-go-pkg,target=/go/pkg,type=volume"
	],
	"postCreateCommand": "bash .devcontainer/postCreate.sh",
	"runArgs": ["--env-file", ".devcontainer/devcontainer.env"]
}
