{
  "name": "armada-website",
  "description": "Armada documentation website",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "fumadocs-mdx",
    "dev": "next dev --turbopack",
    "build": "next build",
    "preview": "node --watch src/scripts/serve.mjs",
    "clean": "rm -rf .next out .source",
    "start": "next start",
    "md-content:check": "remark . --ext md --rc-path .remarkrc-md.mjs --silently-ignore --quiet --frail",
    "md-content:fix": "echo \"Error: not configured\" && exit 1 && remark . --ext md --rc-path .remarkrc-md.mjs --silently-ignore --quiet --frail --output",
    "mdx-content:check": "remark . --ext mdx --rc-path .remarkrc-mdx.mjs --silently-ignore --quiet --frail",
    "mdx-content:fix": "echo \"Error: not configured\" && exit 1 && remark . --ext mdx --rc-path .remarkrc-mdx.mjs --silently-ignore --quiet --frail --output",
    "content:check": "yarn md-content:check && yarn mdx-content:check",
    "content:fix": "yarn md-content:fix && yarn mdx-content:fix",
    "lint:check": "next lint",
    "lint:fix": "next lint --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "spell:check": "cspell lint"
  },
  "dependencies": {
    "@next/third-parties": "^16.1.4",
    "fumadocs-core": "16.4.8",
    "fumadocs-mdx": "14.2.6",
    "fumadocs-ui": "16.4.8",
    "lucide-react": "^0.563.0",
    "mermaid": "^11.12.2",
    "next": "16.1.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "title": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/markdown": "^7.5.1",
    "@next/env": "^16.1.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@theguild/remark-mermaid": "^0.3.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/mdx": "^2.0.13",
    "@types/node": "25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "cspell": "^9.6.0",
    "eslint": "^9",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-next": "16.1.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-mdx": "^3.6.2",
    "katex": "^0.16.27",
    "postcss": "^8.5.5",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rehype-katex": "^7.0.1",
    "remark-cli": "^12.0.1",
    "remark-emoji": "^5.0.2",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-no-dead-urls": "^2.0.1",
    "remark-math": "^6.0.0",
    "remark-mdx": "^3.1.0",
    "remark-mdx-frontmatter": "^5.2.0",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-validate-links": "^13.1.0",
    "serve-handler": "^6.1.6",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
